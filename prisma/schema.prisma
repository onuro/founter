// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  id                      String   @id @default("default")
  baserowToken            String?
  baserowTokenDescription String?
  baserowHost             String?  // "https://baserow.reaktorstudios.com"
  baserowUsername         String?  // Email for JWT auth
  baserowPassword         String?  // Password for JWT auth
  openaiKey               String?
  openaiKeyDescription    String?
  anthropicKey            String?
  anthropicKeyDescription String?
  glmKey                  String?
  glmKeyDescription       String?
  deepseekKey             String?
  deepseekKeyDescription  String?
  updatedAt               DateTime @updatedAt
  createdAt               DateTime @default(now())
}

model SitePreset {
  id           String   @id @default(cuid())
  label        String
  url          String
  type         String   // "IMAGE" | "CONTENT"
  crawlOptions Json     // { scroll: { enabled, scrollCount, scrollDelay }, gridOptions, ...future options }
  order        Int      @default(0) // Display order (lower = higher in list)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// ==========================================
// Custom Tables Feature (Baserow-like)
// ==========================================

model CustomTable {
  id        String   @id @default(cuid())
  name      String
  icon      String?  // emoji or lucide icon name
  order     Int      @default(0)
  fields    Field[]
  rows      Row[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Field {
  id        String      @id @default(cuid())
  tableId   String
  table     CustomTable @relation(fields: [tableId], references: [id], onDelete: Cascade)
  name      String
  type      String      // text | number | url | select | date | boolean | longText | image
  options   Json?       // type-specific options (e.g., choices for select, precision for number)
  order     Int         @default(0)
  width     Int         @default(200) // Column width in pixels
  required  Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([tableId])
}

model Row {
  id        String      @id @default(cuid())
  tableId   String
  table     CustomTable @relation(fields: [tableId], references: [id], onDelete: Cascade)
  values    Json        // { [fieldId]: value }
  order     Int         @default(0)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@index([tableId])
}

// ==========================================
// Automator Feature
// ==========================================

model Automation {
  id          String          @id @default(cuid())
  name        String
  description String?
  type        String          // "resource_enricher"
  enabled     Boolean         @default(true)
  config      Json            // Type-specific configuration
  runs        AutomationRun[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model AutomationRun {
  id           String     @id @default(cuid())
  automationId String
  automation   Automation @relation(fields: [automationId], references: [id], onDelete: Cascade)
  status       String     // "pending" | "running" | "completed" | "failed"
  trigger      Json       // Webhook payload or manual trigger info
  steps        Json       // Array of step results with timing
  error        String?
  duration     Int?       // Duration in milliseconds
  startedAt    DateTime   @default(now())
  completedAt  DateTime?

  @@index([automationId])
}
