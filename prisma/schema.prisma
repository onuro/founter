// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  id                      String   @id @default("default")
  baserowToken            String?
  baserowTokenDescription String?
  openaiKey               String?
  openaiKeyDescription    String?
  anthropicKey            String?
  anthropicKeyDescription String?
  glmKey                  String?
  glmKeyDescription       String?
  updatedAt               DateTime @updatedAt
  createdAt               DateTime @default(now())
}

model SitePreset {
  id           String   @id @default(cuid())
  label        String
  url          String
  type         String   // "IMAGE" | "CONTENT"
  crawlOptions Json     // { scroll: { enabled, scrollCount, scrollDelay }, gridOptions, ...future options }
  order        Int      @default(0) // Display order (lower = higher in list)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
